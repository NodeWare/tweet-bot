<!DOCTYPE html>
<html ng-app="TweetBot">
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/stylesheets/material.min.css'/>
    <link rel='stylesheet' href='/stylesheets/material-wfont.min.css'/>
    <link rel='stylesheet' href='/stylesheets/ripples.min.css'/>'

    <!--Important JS files -->
    <script src="/primus/primus.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular.js"></script>
    <script type="text/javascript" src="/javascripts/app.js"></script>
</head>
<body ng-controller="TweetBotController">
<div class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-header">
        <a class="navbar-brand" href="javascript:void(0)">TweetBot
            <small>v.0.1</small>
        </a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav navbar-right" style="margin-right: 0px">
            <li><a href="https://github.com/NodeWare/tweet-bot">Github</a></li>
            <li><a href="https://github.com/NodeWare">NodeWare</a></li>
        </ul>
    </div>
</div>
<div class="container" style="margin-top: 40px;">
    <div class="col-md-offset-4 col-md-12">
        <form class="navbar-form navbar-left">
            <input type="text" class="form-control col-lg-8" placeholder="Enter #hastag, eg. #nodejs" ng-model="hashtag">
        </form>
        <a href="javascript:void(0)" class="btn btn-info" ng-click="changeHashTag()">#Track</a>
    </div>

    <div class="panel panel-primary col-md-4">
        <div class="panel-heading">
            <h3 class="panel-title">Own Stream</h3>
        </div>
        <div class="panel-body" id="ownStream">
            <div class="ownTweets">
                <div class="list-group">
                    <div ng-hide="ownTweets.length">
                        <div class="list-group-item">
                            <div class="row-content">
                                <h4 class="list-group-item-heading" style="margin-left: 80px;">No tweets.</h4>
                            </div>
                        </div>
                    </div>
                    <div ng-repeat="tweet in ownTweets">
                        <div class="list-group-item">
                            <div class="row-picture">
                                <img class="circle" ng-src={{tweet.user.profile_image_url}} alt="icon">
                            </div>
                            <div class="row-content">
                                <h4 class="list-group-item-heading">{{tweet.user.name}}</h4>
                                <p class="list-group-item-text">{{tweet.text}}</p>
                            </div>
                        </div>
                        <div class="list-group-separator"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-warning col-md-4" style="padding-left: 0;padding-right: 0;">
        <div class="panel-heading">
            <h3 class="panel-title" style="display: inline;">{{hashtag}}</h3> <small class="pull-right">{{hashTweets.length ? hashTweets.length : 0}}</small>
        </div>
        <div class="panel-body" id="hashStream">
            <div class="ownTweets">
                <div class="list-group">
                    <div ng-hide="hashTweets.length">
                        <div class="list-group-item">
                            <div class="row-content">
                                <h4 class="list-group-item-heading" style="margin-left: 80px;">No tweets for {{hashtag}}.</h4>
                            </div>
                        </div>
                    </div>
                    <div ng-repeat="tweet in hashTweets">
                        <div class="list-group-item">
                            <div class="row-picture">
                                <img class="circle" ng-src={{tweet.user.profile_image_url}} alt="icon">
                            </div>
                            <div class="row-content">
                                <h4 class="list-group-item-heading">{{tweet.user.name}}</h4>
                                <p class="list-group-item-text">{{tweet.text}}</p>
                            </div>
                        </div>
                        <div class="list-group-separator"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-success col-md-4" style="padding-left: 0;padding-right: 0;">
        <div class="panel-heading">
            <h3 class="panel-title">Retweet Stream</h3>
        </div>
        <div class="panel-body" id="reTweets">
            <div class="ownTweets">
                <div class="list-group">
                    <div ng-hide="reTweets.length">
                        <div class="list-group-item">
                            <div class="row-content">
                                <h4 class="list-group-item-heading" style="margin-left: 80px;">No retweets to show.</h4>
                            </div>
                        </div>
                    </div>
                    <div ng-repeat="tweet in reTweets" ng-show="reTweets.length">
                        <div class="list-group-item">
                            <div class="row-picture">
                                <img class="circle" ng-src={{tweet.user.profile_image_url}} alt="icon">
                            </div>
                            <div class="row-content">
                                <h4 class="list-group-item-heading">{{tweet.user.name}}</h4>
                                <p class="list-group-item-text">{{tweet.text}}</p>
                            </div>
                        </div>
                        <div class="list-group-separator"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Site footer -->
<footer class="footer">
    <p>&copy; <a href="https://github.com/NodeWare">NodeWare</a> 2014</p>
</footer>
</body>


<!-- JS Libraries -->

<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/javascripts/material.min.js"></script>
<script type="text/javascript" src="/javascripts/ripples.min.js"></script>
</html>
